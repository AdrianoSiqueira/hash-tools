<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="paneRoot" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="360.0"
            prefWidth="840.0" stylesheets="@App.css" xmlns="http://javafx.com/javafx/17"
            fx:controller="hashtools.gui.screen.app.App">
    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <Menu fx:id="menuFile" mnemonicParsing="false" text="%File">
                <MenuItem fx:id="itemClose" mnemonicParsing="false" onAction="#close" text="%Close"/>
            </Menu>
            <Menu fx:id="menuSettings" mnemonicParsing="false" text="%Settings"/>
            <Menu fx:id="menuHelp" mnemonicParsing="false" text="%Help">
                <Menu fx:id="menuManual" mnemonicParsing="false" text="%Manual">
                    <MenuItem fx:id="itemOnline" mnemonicParsing="false" onAction="#showOnlineManual" text="%Online"/>
                    <MenuItem fx:id="itemOffline" mnemonicParsing="false" onAction="#showOfflineManual" text="%Offline"/>
                </Menu>
                <MenuItem fx:id="itemAbout" mnemonicParsing="false" onAction="#showAboutInfo" text="%About"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane fx:id="paneRootContent" tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER">
            <Tab fx:id="tabCheck" closable="false" text="%Check">
                <GridPane fx:id="paneCheckContent" hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="NEVER"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="ALWAYS"/>
                    </rowConstraints>
                    <Label fx:id="labelCheckInput" text="%Input"/>
                    <Label fx:id="labelOfficial" text="%Official" GridPane.rowIndex="1"/>
                    <TextField fx:id="fieldCheck" GridPane.columnIndex="1">
                        <tooltip>
                            <Tooltip text="%Select.the.input.data..It.can.be.a.string.or.a.file."/>
                        </tooltip>
                    </TextField>
                    <TextField fx:id="fieldOfficial" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <tooltip>
                            <Tooltip text="%Select.the.official.data..It.can.be.a.hash.string.or.a.file.with.the.hashes."/>
                        </tooltip>
                    </TextField>
                    <Button fx:id="buttonOpenInputFileCheck" mnemonicParsing="false" onAction="#openCheckFile" text="..." GridPane.columnIndex="2">
                        <tooltip>
                            <Tooltip text="%Open.input.file."/>
                        </tooltip>
                    </Button>
                    <Button fx:id="buttonOpenOfficial" mnemonicParsing="false" onAction="#openOfficialFile" text="..." GridPane.columnIndex="2"
                            GridPane.rowIndex="1">
                        <tooltip>
                            <Tooltip text="%Open.the.file.with.the.official.hashes."/>
                        </tooltip>
                    </Button>
                    <Button fx:id="buttonCheck" mnemonicParsing="false" onAction="#runCheckSequence" text="%Check" GridPane.columnIndex="1"
                            GridPane.columnSpan="2147483647" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                        <tooltip>
                            <Tooltip text="%Check.the.hashes."/>
                        </tooltip>
                    </Button>
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </padding>
                </GridPane>
            </Tab>
            <Tab fx:id="tabGenerate" closable="false" text="%Generate">
                <GridPane fx:id="paneGenerateContent" hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="NEVER"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints valignment="TOP" vgrow="NEVER"/>
                        <RowConstraints vgrow="ALWAYS"/>
                    </rowConstraints>
                    <Label fx:id="labelGenerateInput" text="%Input"/>
                    <Label fx:id="labelOutput" text="%Output" GridPane.rowIndex="1"/>
                    <TextField fx:id="fieldGenerate" GridPane.columnIndex="1">
                        <tooltip>
                            <Tooltip text="%Select.the.input.data..It.can.be.a.string.or.a.file."/>
                        </tooltip>
                    </TextField>
                    <TextField fx:id="fieldOutput" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <tooltip>
                            <Tooltip text="%Select.the.file.where.the.hashes.will.be.saved."/>
                        </tooltip>
                    </TextField>
                    <Button fx:id="buttonOpenInputFileGenerate" mnemonicParsing="false" onAction="#openGenerateFile" text="..." GridPane.columnIndex="2">
                        <tooltip>
                            <Tooltip text="%Open.input.file."/>
                        </tooltip>
                    </Button>
                    <Button fx:id="buttonOpenOutputFile" mnemonicParsing="false" onAction="#openOutputFile" text="..." GridPane.columnIndex="2"
                            GridPane.rowIndex="1">
                        <tooltip>
                            <Tooltip text="%Open.output.file."/>
                        </tooltip>
                    </Button>
                    <GridPane fx:id="paneGenerateAlgorithms" vgap="10.0" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="2">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES"/>
                            <ColumnConstraints hgrow="SOMETIMES"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="SOMETIMES"/>
                            <RowConstraints vgrow="SOMETIMES"/>
                            <RowConstraints vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <CheckBox fx:id="checkMD5" mnemonicParsing="false" text="MD-5"/>
                        <CheckBox fx:id="checkSHA256" mnemonicParsing="false" text="SHA-256" GridPane.columnIndex="1"/>
                        <CheckBox fx:id="checkSHA1" mnemonicParsing="false" text="SHA-1" GridPane.rowIndex="1"/>
                        <CheckBox fx:id="checkSHA384" mnemonicParsing="false" text="SHA-384" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <CheckBox fx:id="checkSHA224" mnemonicParsing="false" text="SHA-224" GridPane.rowIndex="2"/>
                        <CheckBox fx:id="checkSHA512" mnemonicParsing="false" text="SHA-512" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>
                    <Label text="%Algorithm" GridPane.rowIndex="2"/>
                    <Button fx:id="buttonGenerate" mnemonicParsing="false" onAction="#runGenerateSequence" text="%Generate" GridPane.columnIndex="1"
                            GridPane.columnSpan="2147483647" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="BOTTOM">
                        <tooltip>
                            <Tooltip text="%Generate.the.hashes."/>
                        </tooltip>
                    </Button>
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </padding>
                </GridPane>
            </Tab>
            <Tab fx:id="tabResult" text="%Result">
                <VBox fx:id="paneResultContent" spacing="20.0">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </padding>
                    <TableView fx:id="tableResult">
                        <columns>
                            <TableColumn fx:id="columnAlgorithm" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="%Algorithm"/>
                            <TableColumn fx:id="columnOfficialHash" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="%Official.Hash"/>
                            <TableColumn fx:id="columnCalculatedHash" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="%Calculated.Hash"/>
                            <TableColumn fx:id="columnResult" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="%Result"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" minHeight="-Infinity" progress="0.55" VBox.vgrow="NEVER">
                        <tooltip>
                            <Tooltip text="%Reliability.level.of.the.sample."/>
                        </tooltip>
                    </ProgressBar>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
