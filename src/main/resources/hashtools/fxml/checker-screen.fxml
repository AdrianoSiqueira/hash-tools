<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane fx:controller="hashtools.controller.CheckerScreenController" fx:id="pnlRoot" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

    <VBox fx:id="pnlScreenInput">
        <Label fx:id="lblScreenInputHeader" maxWidth="1E6" text="Select a file to check"/>
        <StackPane VBox.vgrow="ALWAYS" fx:id="pnlScreenInputContent" onMouseClicked="#pnlScreenInputContentMouseClicked" styleClass="pnl-button">
            <Label fx:id="lblScreenInputContent" styleClass="lbl-button-text"/>
        </StackPane>
    </VBox>

    <VBox fx:id="pnlScreenChecksum" visible="false">
        <Label fx:id="lblScreenChecksumHeader" maxWidth="1E6" text="Select the checksum file"/>
        <StackPane VBox.vgrow="ALWAYS" fx:id="pnlScreenChecksumContent" onMouseClicked="#pnlScreenChecksumContentMouseClicked" styleClass="pnl-button">
            <Label fx:id="lblScreenChecksumContent" styleClass="lbl-button-text"/>
        </StackPane>
    </VBox>

    <StackPane fx:id="pnlScreenSplash" visible="false">
        <Label fx:id="lblScreenSplashContent" text="Wait..."/>
    </StackPane>

    <VBox fx:id="pnlScreenResult" visible="false">
        <Label fx:id="lblScreenResultHeader" text="Checking results"/>
        <TextArea VBox.vgrow="ALWAYS" editable="false" fx:id="txtResult"/>
    </VBox>
</StackPane>
